#!/usr/bin/env perl
# -*- perl -*-

# 来自 eexpress
# https://github.com/eexpress/eexp-bin/commit/4b32d57a3e61ea133515a6bc8bff85c002b031ed
use 5.012;
if (@ARGV) {
    for (@ARGV) {
        if (-e or -l) {
            say "  \e[1;31mdelete\e[0m =>\t\e[1;4;39;49m$_";
            system 'kioclient', 'move', $_, 'trash:/';
        } else {
            say "  \e[1;33mnot found\e[0m =>\t\e[1;4;39;49m$_";
        }
    }
}
# else {
#    system 'dolphin', 'trash:/'
#}

